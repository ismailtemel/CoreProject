<div class="tech-btm">
    <p>Teknoloji Yazılım ve diğer bloglar</p>
    <form action="/NewsLetter/SubscribeMail/" method="post">
        <input type="email" placeholder="Email" id="txtmail" required="" name="Mail">
        <input type="submit" id="btn" value="Abone Ol">
    </form>
</div>

<script type="text/javascript">

    $("#btn").click(function () {
        let values = {
            Mail: $("#txtmail").val()
        };

        $.ajax({
            type: "post",
            url: "/NewsLetter/SubscribeMail/",
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func);
            }
        });
    });

</script>

